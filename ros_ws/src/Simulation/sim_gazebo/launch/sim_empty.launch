<launch>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find sim_gazebo)/world/empty.world"/>
		<arg name="paused" value="true"/>
  </include>

	<!-- Spawn a robot into Gazebo -->
	<node
    name="spawn_model"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-file $(find robot_description)/urdf/robot.urdf -urdf -z 0.6 -model robot"	
    output="screen" />

  <!-- Load Joint Controllers -->
  <rosparam file="$(find sim_gazebo)/config/control.yaml" command="load"/>
  
  <param name="robot_description" command="cat $(find robot_description)/urdf/robot.urdf" />

  <node name="controller_spawner"
    pkg="controller_manager"
    type="spawner"
    respawn="false"
    output="screen"
    ns="/roboassistant"
    args="left_torque_controller
    right_torque_controller
		joint_state_controller"/>

  <node name="robot_state_publisher"
    pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false"
    output="screen">
    <remap from="/joint_states" to="/roboassistant/joint_states"/>
  </node>

</launch>
